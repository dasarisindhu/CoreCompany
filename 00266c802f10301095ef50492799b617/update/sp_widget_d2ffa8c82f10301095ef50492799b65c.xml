        <client_script><![CDATA[api.controller= function ($scope, $http) {
	
var c = this;

c.submit = function(userData){


$http({

method: 'POST',

url: '/api/601941/insert_user',

data : userData

})
	.then(function success(response) {

 console.log(response);
 $scope.msg=response.data.result.msg;
 $scope.code=response.status;

}, function error(response) {

// this function will be called when the request returned error status
	console.log(response.message);
	$scope.msg="insertion failed";
});
	
}
	
c.update =function(userData){
	$http({
		method: 'PUT',
		url : '/api/601941/insert_user/put',
		data : userData
	})
	.then(function success(response){
		console.log(response);
		$scope.m=response.data.result.msg;
		$scope.hide=true;
		
	}, function error(response){
		 $scope.m = "updation failed";
	});
}
	



};


]]></client_script>
